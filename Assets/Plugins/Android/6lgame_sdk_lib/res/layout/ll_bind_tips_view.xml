<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_mainTopContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_loginLogo"
        android:background="@drawable/ll_login_bg_shape"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ll_close_ic"/>

        <TextView
            android:id="@+id/tv_bindTips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/ll_login_box_bg"
            android:paddingBottom="30dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/ll_login_main_title_color"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/btn_bindSub"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/ll_select_common_btn"
            android:textColor="#ffffff"
            android:textSize="@dimen/ll_title_btn_text_size"/>

        <CheckBox
            android:id="@+id/cb_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:button="@drawable/ll_bulletin_checkbox_selector"
            android:paddingLeft="5dp"
            android:text="以后不再显示"
            android:textColor="@color/ll_login_main_title_color"
            android:textSize="12sp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_loginLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-29dp"
        android:src="@drawable/ll_login_logo"/>

</RelativeLayout>