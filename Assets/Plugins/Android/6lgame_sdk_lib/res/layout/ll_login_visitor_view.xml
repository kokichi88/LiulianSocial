<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_bindPromptContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/ll_login_box_bg"
        android:lineSpacingExtra="5dp"
        android:padding="10dp"
        android:text="@string/ll_bind_phone_prompt"
        android:textColor="@color/ll_login_main_title_color"
        android:textSize="15sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_bindPromptContent"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_bindVisitorSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@drawable/ll_select_common_btn"
            android:text="立即绑定"
            android:textColor="#ffffff"
            android:textSize="@dimen/ll_title_btn_text_size"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn_loginVisitorGameSuccessSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@drawable/ll_select_common_btn"
            android:text="进入游戏"
            android:textColor="#ffffff"
            android:textSize="@dimen/ll_title_btn_text_size"
            android:textStyle="bold"/>
    </LinearLayout>

</RelativeLayout>